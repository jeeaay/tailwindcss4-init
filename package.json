{
	"scripts": {
		"dev": "run-p watch server",
		"build": "tailwindcss -m -i ./src/*.css -o ./public/css/*",
		"watch": "tailwindcss -i ./src/*.css -o ./public/css/* --watch",
		"server": "http-server ./public -p 8080 -c-1"
	},
	"dependencies": {
	},
	"devDependencies": {
		"http-server": "14.1.1",
		"npm-run-all": "4.1.5",
		"tailwindcss": "^4.1.11",
		"@tailwindcss/cli": "^4.1.11"
	}
}
